<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0181E34"
    android:orientation="vertical"
    tools:context=".my_account.MyAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="20dp"
        android:background="@drawable/toolbar_gradient">
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="36dp"
            android:background="@drawable/round_back"
            android:layout_marginLeft="24dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_black_60dp" />
        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:backgroundTint="#84FFFF"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:id="@+id/id_viewProfile"
            />
        <TextView
            android:id="@+id/text_pic"
            android:elevation="20dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:fontFamily="@font/psr"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24dp" />
    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_email_black_24dp"
                android:tint="#84FFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="#84FFFF"
                android:id="@+id/profile_email"
                android:fontFamily="@font/psr"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:text="abc@xyz.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_marginLeft="30dp"
                android:tint="#84FFFF"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/psr"
                android:id="@+id/profile_number"
                android:paddingBottom="10dp"
                android:textColor="#84FFFF"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp"
                android:tint="#84FFFF"
                android:src="@drawable/ic_settings_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:paddingBottom="10dp"
                android:fontFamily="@font/psr"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:layout_marginLeft="42dp"
                android:textSize="20dp"
                android:textColor="#84FFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_marginLeft="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:id="@+id/id_help"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:tint="#84FFFF"
                android:src="@drawable/ic_supervisor_account_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Help &amp; Support"
                android:textColor="#84FFFF"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                />

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/logout_user"
            android:padding="16dp"
            android:text="logout"
            android:layout_height="wrap_content" />






</LinearLayout>




