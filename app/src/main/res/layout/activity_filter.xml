<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activity.filterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="3dp"
        android:max="100000"
        android:min="1000"
        android:progress="10000"
        android:progressDrawable="@drawable/custom_progress"
        android:thumb="@android:drawable/ic_notification_overlay" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹1000"
        android:layout_below="@+id/seekBar"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="₹50000"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/seekBar"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Houses For"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:background="@drawable/rounded_button"
        android:text="BOYS" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />



    <Button
        android:id="@+id/button2"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="100dp"
        android:background="@drawable/rounded_button"
        android:text="GIRLS" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />


    <Button
        android:id="@+id/button3"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="80dp"

        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/rounded_button"
        android:text="FAMILY" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />


    <Button
        android:id="@+id/button12"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="80dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_button"
        android:text="OTHER" />
    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />



    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedrooms"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button4"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:text="1" />

    <Button
        android:id="@+id/button5"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:text="2" />

    <Button
        android:id="@+id/button6"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:text="3" />

    <Button
        android:id="@+id/button7"
        style="@android:style/Widget.Holo.Light.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_button"
        android:text="4+" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance From Location"
        android:layout_below="@+id/button7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>

    <SeekBar
        android:id="@+id/seekBar2"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:max="100"
        android:min="0"
        android:progress="50"
        android:progressDrawable="@drawable/custom_progress"
        android:thumb="@android:drawable/ic_notification_overlay" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar2"
        android:text="0km"
        android:id="@+id/textView8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100km"
        android:layout_below="@+id/seekBar2"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Duration of Stay"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/seekBar3"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="10dp"
        android:max="1000"
        android:min="0"
        android:progress="500"
        android:progressDrawable="@drawable/custom_progress"
        android:thumb="@android:drawable/ic_notification_overlay" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 month"
        android:layout_below="@id/seekBar3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 month"
        android:id="@+id/textView11"
        android:layout_below="@+id/seekBar3"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Furnishing Type"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:text="FURNISHED" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:text="SEMI" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"

        android:background="@drawable/rounded_button"
        android:text="UNFURNISHED" />

    <Button
        android:id="@+id/button11"
        android:marginTop="10dp"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="413dp"
        android:background="#90EE90"
        android:text="APPLY FILTER" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50km"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/seekBar2"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar2"
        android:text=""
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/seekBar3"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>