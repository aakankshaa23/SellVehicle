<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activity.filterActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="5dp"
       android:layout_above="@+id/apply_filter_button">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:textStyle="bold"
               android:text="Rent"
               android:textSize="20dp" />

           <SeekBar
               android:id="@+id/seekBar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textView2"
               android:layout_marginTop="3dp"
               android:max="50000"
               android:min="1000"
               android:progress="25000"

               android:thumb="@android:drawable/ic_notification_overlay" />

           <TextView
               android:id="@+id/textView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:layout_below="@+id/seekBar"
               android:layout_centerHorizontal="true"/>

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="₹1000"
               android:layout_below="@+id/seekBar"/>

           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="₹50000"
               android:layout_alignParentRight="true"
               android:layout_below="@+id/seekBar"/>

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Houses For"
               android:textStyle="bold"
               android:layout_below="@+id/textView3"
               android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
               android:textSize="20dp"/>

           <RadioGroup
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/textView5"
               android:orientation="horizontal"
               android:id="@+id/radiogroup">

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Boys"
                   android:layout_weight="1"
                   android:layout_marginRight="20dp"

                   android:id="@+id/boys"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Girls"
                   android:layout_marginRight="20dp"
                   android:layout_weight="1"
                   android:id="@+id/girls"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="20dp"
                   android:text="Family"
                   android:layout_weight="1"
                   android:id="@+id/family" />

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:text="Other"
                   android:id="@+id/other"/>

           </RadioGroup>
           <TextView
               android:id="@+id/textView6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Bedrooms"
               android:layout_marginBottom="10dp"
               android:layout_below="@+id/radiogroup"
               android:layout_centerHorizontal="true"
               android:textSize="20dp"
               android:textStyle="bold"
               android:layout_marginTop="20dp"/>


           <RadioGroup
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/radiogroup2"
               android:layout_below="@id/textView6">

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="30dp"
                   android:id="@+id/one"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="30dp"
                   android:text="2"
                   android:id="@+id/two"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="30dp"
                   android:layout_height="wrap_content"
                   android:text="3"
                   android:id="@+id/three" />
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="30dp"
                   android:text="4+"
                   android:id="@+id/four" />


           </RadioGroup>
           <TextView
               android:id="@+id/textView7"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Distance From Location"
               android:textStyle="bold"
               android:layout_below="@+id/radiogroup2"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="20dp"
               android:textSize="20dp"/>

           <SeekBar
               android:id="@+id/seekBar2"
               style="@style/Widget.AppCompat.SeekBar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textView7"
               android:layout_marginTop="10dp"
               android:max="100"
               android:min="0"
               android:progress="50"

               android:thumb="@android:drawable/ic_notification_overlay" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/seekBar2"
               android:text="0km"
               android:id="@+id/textView8"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="100km"
               android:layout_below="@+id/seekBar2"
               android:layout_alignParentRight="true"/>

           <TextView
               android:id="@+id/textView9"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textView8"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="26dp"
               android:textStyle="bold"
               android:text="Duration of Stay"
               android:textSize="20dp" />

           <SeekBar
               android:textStyle="bold"
               android:id="@+id/seekBar3"
               style="@style/Widget.AppCompat.SeekBar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textView9"
               android:layout_marginTop="10dp"
               android:max="60"
               android:min="1"
               android:progress="30"
               android:thumb="@android:drawable/ic_notification_overlay" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2 month"
               android:layout_below="@id/seekBar3"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="60 month"
               android:id="@+id/textView11"
               android:layout_below="@+id/seekBar3"
               android:layout_alignParentRight="true"
               />

           <TextView
               android:id="@+id/textView10"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/textView11"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="14dp"
               android:text="Furnishing Type"
               android:textStyle="bold"
               android:textSize="20dp" />
           <RadioGroup
               android:layout_width="wrap_content"
               android:layout_below="@id/textView10"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/radiogroup3">

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_marginRight="20dp"
                   android:layout_height="wrap_content"
                   android:text="Unfurnished"
                   android:id="@+id/unfurnished"/>
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_marginRight="20dp"
                   android:layout_height="50dp"
                   android:text="Semi\nFurnished"
                   android:id="@+id/semifurnished"/>

               <RadioButton
                   android:id="@+id/fullyfurnished"
                   android:layout_width="wrap_content"
                   android:layout_height="50dp"
                   android:text="Fully\nfurnished" />



           </RadioGroup>





           <TextView
               android:id="@+id/textView12"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/seekBar2"/>

           <TextView
               android:id="@+id/textView13"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/seekBar2"
               android:text=""
               android:layout_centerHorizontal="true"/>

           <TextView
               android:id="@+id/textView14"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:layout_below="@+id/seekBar3"
               android:layout_centerHorizontal="true"/>
       </RelativeLayout>

   </ScrollView>
    <Button
        android:id="@+id/apply_filter_button"
        android:paddingTop="10dp"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="#000"
        android:text="APPLY FILTER"
        android:textStyle="bold"/>



</RelativeLayout>
